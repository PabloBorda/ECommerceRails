<h1>Listing users</h1>
<br/><%= link_to "Backend home", :controller=>"backend", :action => "login" %><br/>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Lastname</th>
    <th>Address</th>
    <th>City</th>
    <th>Country</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Zip</th>
    <th>Gender</th>
    <th>Birthdate</th>
    <th>Username</th>
    <th>Password</th>
    <th>Usertype</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.id %></td>
    <td><%=h user.name %></td>
    <td><%=h user.lastname %></td>
    <td><%=h user.address %></td>
    <td><%=h user.city %></td>
    <td><%=h user.country %></td>
    <td><%=h user.email %></td>
    <td><%=h user.phone %></td>
    <td><%=h user.zip %></td>
    <td><%=h user.gender %></td>
    <td><%=h user.birthdate %></td>
    <td><%=h user.username %></td>
    <td><%=h user.password %></td>
    <td><%=h user.usertype %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

