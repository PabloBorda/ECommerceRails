/* menu styles */
#jsddm
{	margin: 0;
	padding: 0}

	#jsddm li
	{	float: left;
		list-style: none;
		font: 12px Futura, Futura  }

	#jsddm li a
	{	display: block;
		background: #C0C0C0;
		padding: 5px 12px;
		text-decoration: none;
		border-right: 1px solid #c0c0c0;
		width: 70px;
		color: white;
		white-space: nowrap  }

	#jsddm li a:hover
	{	background: #A6A6A6; color: #4E8392; }

		#jsddm li ul
		{	margin: 0;
			padding: 0;
			position: absolute;
			visibility: hidden;
			border-top: 1px solid white}

			#jsddm li ul li
			{	float: none;
				display: inline}

			#jsddm li ul li a
			{	width: auto;
				background: #C0C0C0;
				color: #24313C}

			#jsddm li ul li a:hover
			{	background: #A6A6A6 }



